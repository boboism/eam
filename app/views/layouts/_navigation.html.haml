.navbar.navbar-fixed-top.navbar-inverse
  .navbar-inner
    .container
      %a.btn.btn-navbar.collapsed{ :'data-toggle' => 'collapse', :'data-target' => '.nav-collapse' }
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to t('layouts.application.title'), root_path, class: 'brand'
      .nav-collapse.collapse
        %ul.nav.pull-right
          - if user_signed_in?
            %li
              = link_to t('.signout'), destroy_user_session_path, :method=>'delete'
            %li
              = link_to t('.profile'), edit_user_registration_path
            - if current_user.has_role? :admin
              %li
                = link_to t('.manage_users'), users_path
          - else
            %li
              = link_to t('.login'), new_user_session_path
            %li
              = link_to t('.signup'), new_user_registration_path
