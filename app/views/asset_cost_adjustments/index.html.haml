- model_class = AssetCostAdjustment.new.class
.row-fluid.page-header
  .span5
    %h3= t(".title", title: model_class.model_name.human, default: t("helpers.views.index.title", title: model_class.model_name.human, default: ""))
  .span7
    .pull-right
      .btn-group
        = link_to new_asset_cost_adjustment_path, class: "btn" do
          %i.icon-plus
          %span= t(".new", default: t("helpers.links.new"))
      .btn-group
        = render "layouts/toolbar"
.row-fluid
  .span12
    = form_tag model_class, method: :get, class: "form-search" do
      .row-fluid
        .span12
          .input-append
            = text_field_tag "[search][text]", nil, class: "search-query", placeholder: t(".placehoder", default: t("helpers.links.search_placeholder", default: ""))
            = button_tag class: "btn" do
              %i.icon-search
              %span= t(".search", default: t("helpers.links.search"))
.row-fluid
  .span12
    %table.table.table-condensed.table-hover.my-table
      %thead
        %tr
          %th= check_box_tag "check_#{model_class.name.underscore}"
          %th= model_class.human_attribute_name(:asset_id)
          %th= model_class.human_attribute_name(:effective_date)
          %th= model_class.human_attribute_name(:original_cost_from)
          %th= model_class.human_attribute_name(:original_cost_to)
          %th= model_class.human_attribute_name(:salvage_from)
          %th= model_class.human_attribute_name(:salvage_to)
          %th= model_class.human_attribute_name(:salvage_rate_from)
          %th= model_class.human_attribute_name(:salvage_rate_to)
          %th= model_class.human_attribute_name(:created_by_id)
          %th= model_class.human_attribute_name(:updated_by_id)
          %th= model_class.human_attribute_name(:confirmed_by_id)
          %th= model_class.human_attribute_name(:confirmed_at)
          %th= model_class.human_attribute_name(:approved_by_id)
          %th= model_class.human_attribute_name(:approved_at)
          %th= model_class.human_attribute_name(:rejected_by_id)
          %th= model_class.human_attribute_name(:rejected_at)
          %th= model_class.human_attribute_name(:published)
          %th= model_class.human_attribute_name(:published_at)
          %th
      %tbody
        - @asset_cost_adjustments.each do |asset_cost_adjustment|
          %tr{href: asset_cost_adjustment_path(asset_cost_adjustment)}
            %td= check_box_tag "#{model_class.name.underscore}_id_#{asset_cost_adjustment.id}"
            %td= asset_cost_adjustment.asset_id
            %td= asset_cost_adjustment.effective_date
            %td= asset_cost_adjustment.original_cost_from
            %td= asset_cost_adjustment.original_cost_to
            %td= asset_cost_adjustment.salvage_from
            %td= asset_cost_adjustment.salvage_to
            %td= asset_cost_adjustment.salvage_rate_from
            %td= asset_cost_adjustment.salvage_rate_to
            %td= asset_cost_adjustment.created_by_id
            %td= asset_cost_adjustment.updated_by_id
            %td= asset_cost_adjustment.confirmed_by_id
            %td= asset_cost_adjustment.confirmed_at
            %td= asset_cost_adjustment.approved_by_id
            %td= asset_cost_adjustment.approved_at
            %td= asset_cost_adjustment.rejected_by_id
            %td= asset_cost_adjustment.rejected_at
            %td= asset_cost_adjustment.published
            %td= asset_cost_adjustment.published_at
            %td
              .btn-group.pull-right
                = link_to asset_cost_adjustment, class: "btn" do
                  %i.icon-eye-open
                  %span= t(".show", default: t("helpers.links.show"))
                = link_to edit_asset_cost_adjustment_path(asset_cost_adjustment), class: "btn" do
                  %i.icon-pencil
                  %span= t(".edit", default: t("helpers.links.edit"))
                = link_to asset_cost_adjustment, method: :delete, data: {confirm: t(".destroy_confirm", default: t("helpers.links.destroy_confirm"))}, class: "btn btn-danger" do
                  %i.icon-trash.icon-white
                  %span= t(".destroy", default: t("helpers.links.destroy"))
.row-fluid
  .span12
    = paginate @asset_cost_adjustments
