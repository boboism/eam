- model_class = @asset.class
.row-fluid.page-header
  .span5
    %h3= t(".title", title: "#{model_class.model_name.human}: #{@asset.id}", default: t("helpers.views.edit.title", title: "#{model_class.model_name.human}: #{@asset.id}"))
  .span7
    .pull-right
      .btn-group
        = link_to assets_path, class: "btn" do
          %i.icon-list
          %span= t(".index", default: t("helpers.links.index"))
      .btn-group
        = render "layouts/toolbar"
.row-fluid
  .span12
    = render "form"
