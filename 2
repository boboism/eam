// bootstrap-datepicker init
fire_datepicker = function() {
  default_options = {
    format: "yyyy-mm-dd",
    weekStart: 1
  };
  $('[data-behaviour~=datepicker]').datepicker(default_options);
//  $('i.icon-calendar').on('click', function() {
//    $(this).parent().parent().find('[data-behaviour~=datepicker]').datepicker(default_options);
//  });
}


destroy_fields = function(link) {
  $(link).prev("input[type='hidden']").val("true");
  $(link).closest(".field").hide();
}

create_fields = function(link, association, content) {
  var new_id = new Date().getTime();
  var regexp = new RegExp("new_" + association, "g");
  alert($(link).closest(".field").html());
  $(link).closest(".field").before(content.replace(regexp, new_id));
}

$(function(){
  fire_datepicker();
});
